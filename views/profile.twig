{% extends 'layout.twig' %}
{% set active_nav = 'profile' %}
{% block body %}
<div class="row">
  <div class="col s12 m4 l3">
    <div class="row">
      <div class="collection with-header center-align">
        <a class="collection-header">
          <img src="https://scontent-frx5-1.xx.fbcdn.net/v/t1.0-9/29594992_1632136363502622_4060485001386905311_n.jpg?_nc_cat=100&oh=44d44c07d27bc15a21d48dda5dc6482e&oe=5C4B5A67"
            alt="" class="left responsive-img">
          <h4>{{rows[0].username}}</h4>
        </a>
        {% if active == 'profile' %}
        <a href={{ urls~'/profile' }} class="collection-item active">PROFILE</a>
        {% else %}
        <a href={{ urls~'/profile' }} class="collection-item">PROFILE</a>
        {% endif %}

        {% if active == 'offers' %}
        <a href={{ urls~'/offers' }} class="collection-item active">MY OFFERS</a>
        {% else %}
        <a href={{ urls~'/offers' }} class="collection-item">MY OFFERS</a>
        {% endif %}

        {% if active == 'orders' %}
        <a href={{ urls~'/orders' }} class="collection-item active">MY ORDERS</a>
        {% else %}
        <a href={{ urls~'/orders' }} class="collection-item">MY ORDERS</a>
        {% endif %}

        {# {% if active == 'profile' %}

        {% else %}
        {% endif %} #}
        <a href="#!" class="collection-item">...</a>
      </div>
    </div>
    <div class="row">
      next steps: <br>
      upload into server <br>
      adapt the search to find order (new page?) <br>
      hash the entities name and values <br>
    </div>
  </div>
  <div class="col s12 m8 l9">
    {% if active == 'offers' %}
    <div class="row">
      <div class=" col s11 offset-s1 center">
        <a class="waves-effect waves-light btn-large"><i class="material-icons left">add</i>new offer</a>
      </div>
    </div>
    {% elseif active == 'orders' %}
    <div class="row">
      <div class=" col s11 offset-s1 center">
        <a class="waves-effect waves-light btn-large" href="/"><i class="material-icons left">add</i>new order</a>
      </div>
    </div>
    {% endif %}

    <div class="row">
      {% if active == 'offers' or active == 'orders' %}
      {#Begin objects#}
      {% for row in rows %}
      <div class="col m2 l1"></div>
      <div class="col m8 l5">
        <div class="row">
          <div class="card sticky-action hoverable">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src={{row.path}}>
            </div>
            <div class="card-action">
              <span class="card-title activator grey-text text-darken-4">{{row.o_title}}<i class="material-icons right">more_vert</i></span>
              <p><a href="#">Place an order</a></p>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">{{row.o_title}}<i class="material-icons right">close</i></span>
              <p>{{row.o_description}}</p>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
      {#End objects#}
      {% else %}
      <div class="col s11 offset-s1 center">
        <div class="row center">

        </div>
        <div class="row center">
          <table class="striped centered responsive-table">
            <tbody>
              <tr>
                <td>Username </td>
                <td>{{ rows[0].username }}</td>
              </tr>
              <tr>
                <td>E-Mail</td>
                <td>{{ rows[0].email }}</td>
              </tr>
              <tr>
                <td>First Name</td>
                <td>{{ rows[0].f_name }}</td>
              </tr>
              <tr>
                <td>Last Name</td>
                <td>{{ rows[0].l_name }}</td>
              </tr>
              <tr>
                <td>Fun-Effect</td>
                <td>{{ rows[0].c_description }}</td>
              </tr>
              <tr>
                <td>street</td>
                <td>{{ rows[0].c_street }}</td>
              </tr>
              <tr>
                <td>ZIP</td>
                <td>{{ rows[0].c_zip }}</td>
              </tr>
              <tr>
                <td>City</td>
                <td>{{ rows[0].c_town }}</td>
              </tr>
              <tr>
                <td>Country</td>
                <td>{{ rows[0].c_country }}</td>
              </tr>
            </tbody>
          </table>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
</div>
{% endblock %}